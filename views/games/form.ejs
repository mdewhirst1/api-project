<form action="/games/<%= game.id %>" method="POST">

  <% if (edit) { %>
  <input type="hidden" name="_method" value="PUT">
  <% } %>
  <br>
  <input type="text" name="title" value="<%=game.title %>" placeholder="Title goes here." />
  <br>
  <textarea name="body" placeholder="The body of the game.">
<%=game.body %>
  </textarea>
  <br>
  <input type="submit" value="Save Game" />

</form>
